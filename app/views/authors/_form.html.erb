<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :author_username, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :author_email, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :author_password, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, id: :author_password_confirmation, class: "form-control" %>
  </div>
  <br />

  <div class="actions">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= form.submit "Submit", class: "btn btn-success" %>
      <%= link_to "Cancel", articles_path, class: "btn btn-warning" %>
    </div>
  </div>
<% end %>
