
    <h1>Articles</h1>

    <ul class="list-group" id="articles">
      <% @articles.each do |article| %>
      <li class="list-group-item">
        <%= link_to article.title, article_path(article), class: 'article_title' %>
      </li>
      <% end %>
    </ul>

    <%= link_to "Create a New Article", new_article_path, class: "btn btn-primary new_article" %>
