
<%= form_tag author_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
        <br />
    <%= text_field_tag :email, nil, class:'form-control' %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag :password %>
    <br />
    <%= password_field_tag :password, nil, class:'form-control' %>
    <br/>
  </div>
  <br />
  <div class="actions">
    <%= submit_tag "Login", class: "btn btn-success" %>
    <%= link_to 'Cancel', articles_path, class: "btn btn-warning" %>
  </div>
<% end %>
